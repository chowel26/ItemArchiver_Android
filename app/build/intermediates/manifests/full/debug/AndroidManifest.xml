<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="example.com.itemarchiver"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/folder_icon_512x512"
        android:label="Item Archiver"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="example.com.itemarchiver.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="example.com.itemarchiver.CreateItem" />
        <activity android:name="example.com.itemarchiver.ItemList" />
        <activity android:name="example.com.itemarchiver.ViewItem" />
        <activity android:name="example.com.itemarchiver.EditItem" />
    </application>

</manifest>